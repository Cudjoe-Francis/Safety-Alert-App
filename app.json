{
  "expo": {
    "name": "safety-alert-app",
    "slug": "safety-alert-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/flashBackground.png",
    "scheme": "safetyalertapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.galaxies.firebase",
      "infoPlist": {
        "NSFaceIDUsageDescription": "This app uses Face ID to authenticate you"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/flashBackground.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.galaxies.firebase",
      "config": {
        "googleMaps": {
          "apiKey": "YOUR_GOOGLE_MAPS_API_KEY"
        }
      },
      "permissions": [
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "WAKE_LOCK",
        "USE_FULL_SCREEN_INTENT"
      ],
      "notification": {
        "icon": "./assets/images/notification-icon.png",
        "color": "#ff5330",
        "sound": true,
        "vibrate": true,
        "priority": "high",
        "categoryId": "emergency"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#ff5330",
          "sounds": [
            "./assets/sounds/emergency-alert.wav",
            "./assets/sounds/reply-notification.wav"
          ],
          "mode": "production"
        }
      ],
      "expo-router",
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/flashBackground.png",
          "resizeMode": "cover",
          "backgroundColor": "#000000"
        }
      ],
      "expo-secure-store",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
